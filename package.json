{
  "name": "alchemorsel-v3",
  "version": "3.0.0",
  "description": "Enterprise-grade recipe management platform with AI capabilities and hot reload development",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "npm run watch",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npm run sass && npm run postcss",
    "build:js": "webpack --mode=development",
    "build:prod": "NODE_ENV=production npm run build:css:prod && npm run build:js:prod",
    "build:css:prod": "npm run sass:prod && npm run postcss:prod",
    "build:js:prod": "webpack --mode=production",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "npm run sass:watch",
    "watch:js": "webpack --mode=development --watch",
    "sass": "sass src/scss:internal/infrastructure/http/server/static/css --style=expanded --source-map",
    "sass:watch": "sass --watch src/scss:internal/infrastructure/http/server/static/css --style=expanded --source-map",
    "sass:prod": "sass src/scss:internal/infrastructure/http/server/static/css --style=compressed --no-source-map",
    "postcss": "postcss internal/infrastructure/http/server/static/css/*.css --dir internal/infrastructure/http/server/static/css",
    "postcss:prod": "postcss internal/infrastructure/http/server/static/css/*.css --dir internal/infrastructure/http/server/static/css --env production",
    "lint:css": "stylelint 'src/scss/**/*.scss'",
    "lint:js": "eslint 'src/js/**/*.js'",
    "clean": "rimraf internal/infrastructure/http/server/static/css/*.css internal/infrastructure/http/server/static/js/*.js",
    "dev": "npm run clean && npm run build && npm run watch",
    "serve": "live-server internal/infrastructure/http/server/static --port=3001 --watch=internal/infrastructure/http/server/static",
    "analyze": "webpack-bundle-analyzer dist/js/bundle.js",
    "test:e2e": "node test/e2e/comprehensive_puppeteer_test.js",
    "test:api": "node test/e2e/api_test.js",
    "test:performance": "node test/e2e/performance_test.js",
    "test:all": "npm run test:api && npm run test:e2e && npm run test:performance"
  },
  "dependencies": {
    "htmx.org": "^1.9.6"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "axios": "^1.6.2",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "mini-css-extract-plugin": "^2.7.6",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-preset-env": "^9.3.0",
    "puppeteer": "^21.6.1",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "style-loader": "^3.3.3",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "keywords": [
    "recipe",
    "management",
    "ai",
    "htmx",
    "go",
    "enterprise",
    "hot-reload",
    "testing",
    "e2e",
    "development"
  ],
  "author": "Alchemorsel Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alchemorsel/v3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}