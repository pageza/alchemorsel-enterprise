{
  "dashboard": {
    "id": null,
    "title": "Infrastructure Overview",
    "tags": ["alchemorsel", "infrastructure", "system", "resources"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "slo:cpu_utilization",
            "legendFormat": "CPU Usage",
            "refId": "A"
          },
          {
            "expr": "slo:memory_utilization",
            "legendFormat": "Memory Usage",
            "refId": "B"
          },
          {
            "expr": "slo:db_connection_utilization",
            "legendFormat": "DB Connections",
            "refId": "C"
          },
          {
            "expr": "slo:cache_hit_ratio",
            "legendFormat": "Cache Hit Rate",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 85}
              ]
            },
            "unit": "percent",
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Service Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{service=\"alchemorsel-api\"}",
            "legendFormat": "API",
            "refId": "A"
          },
          {
            "expr": "up{service=\"postgresql\"}",
            "legendFormat": "Database",
            "refId": "B"
          },
          {
            "expr": "up{service=\"redis\"}",
            "legendFormat": "Cache",
            "refId": "C"
          },
          {
            "expr": "up{service=\"ollama\"}",
            "legendFormat": "AI Service",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {"text": "DOWN", "color": "red"},
                  "1": {"text": "UP", "color": "green"}
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 3,
        "title": "CPU Usage by Container",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{name=~\".*alchemorsel.*\"}[5m]) * 100",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14}
      },
      {
        "id": 4,
        "title": "Memory Usage by Container",
        "type": "timeseries",
        "targets": [
          {
            "expr": "container_memory_working_set_bytes{name=~\".*alchemorsel.*\"} / 1024 / 1024",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "mbytes"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 14}
      },
      {
        "id": 5,
        "title": "Network I/O",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{name=~\".*alchemorsel.*\"}[5m])",
            "legendFormat": "RX {{name}}",
            "refId": "A"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{name=~\".*alchemorsel.*\"}[5m])",
            "legendFormat": "TX {{name}}",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "Bps"
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 22}
      },
      {
        "id": 6,
        "title": "Disk Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "(node_filesystem_size_bytes{fstype!~\"tmpfs|fuse.lxcfs\"} - node_filesystem_free_bytes{fstype!~\"tmpfs|fuse.lxcfs\"}) / node_filesystem_size_bytes{fstype!~\"tmpfs|fuse.lxcfs\"} * 100",
            "legendFormat": "{{mountpoint}} ({{instance}})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent",
            "max": 100
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30}
      },
      {
        "id": 7,
        "title": "Database Connections",
        "type": "timeseries",
        "targets": [
          {
            "expr": "db_connections_active",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "db_connections_idle",
            "legendFormat": "Idle",
            "refId": "B"
          },
          {
            "expr": "db_connections_active + db_connections_idle",
            "legendFormat": "Total",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30}
      },
      {
        "id": 8,
        "title": "Cache Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(cache_operations_total{operation=\"hit\"}[5m])",
            "legendFormat": "Cache Hits/sec",
            "refId": "A"
          },
          {
            "expr": "rate(cache_operations_total{operation=\"miss\"}[5m])",
            "legendFormat": "Cache Misses/sec",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "ops"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 38}
      },
      {
        "id": 9,
        "title": "Load Average",
        "type": "timeseries",
        "targets": [
          {
            "expr": "node_load1",
            "legendFormat": "1m {{instance}}",
            "refId": "A"
          },
          {
            "expr": "node_load5",
            "legendFormat": "5m {{instance}}",
            "refId": "B"
          },
          {
            "expr": "node_load15",
            "legendFormat": "15m {{instance}}",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 38}
      },
      {
        "id": 10,
        "title": "Container Restart Events",
        "type": "timeseries",
        "targets": [
          {
            "expr": "increase(container_start_time_seconds{name=~\".*alchemorsel.*\"}[1h])",
            "legendFormat": "{{name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 46}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up, instance)",
          "current": {
            "value": "All",
            "text": "All"
          },
          "includeAll": true,
          "refresh": 1
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "High Resource Usage",
          "datasource": "Prometheus",
          "expr": "ALERTS{alertname=~\".*High.*Usage.*\", alertstate=\"firing\"}",
          "titleFormat": "Resource Alert: {{alertname}}",
          "textFormat": "{{description}}"
        }
      ]
    },
    "schemaVersion": 37,
    "version": 1
  }
}