# Alchemorsel v3 Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# Application Environment
# =============================================================================
ALCHEMORSEL_APP_ENVIRONMENT=development
ALCHEMORSEL_APP_NAME=alchemorsel-v3
ALCHEMORSEL_APP_VERSION=3.0.0

# =============================================================================
# Server Configuration
# =============================================================================
ALCHEMORSEL_API_PORT=3000
ALCHEMORSEL_WEB_PORT=8080

# =============================================================================
# Database Configuration
# =============================================================================
ALCHEMORSEL_DATABASE_HOST=localhost
ALCHEMORSEL_DATABASE_PORT=5432
ALCHEMORSEL_DATABASE_DATABASE=alchemorsel_dev
ALCHEMORSEL_DATABASE_USERNAME=postgres
ALCHEMORSEL_DATABASE_PASSWORD=postgres
ALCHEMORSEL_DATABASE_SSL_MODE=disable
ALCHEMORSEL_DATABASE_MAX_CONNECTIONS=25
ALCHEMORSEL_DATABASE_MAX_IDLE_CONNECTIONS=5

# =============================================================================
# Redis Configuration
# =============================================================================
ALCHEMORSEL_REDIS_HOST=localhost
ALCHEMORSEL_REDIS_PORT=6379
ALCHEMORSEL_REDIS_DATABASE=0
ALCHEMORSEL_REDIS_PASSWORD=
ALCHEMORSEL_REDIS_MAX_CONNECTIONS=10

# =============================================================================
# JWT Configuration
# =============================================================================
ALCHEMORSEL_JWT_SECRET=your-super-secret-jwt-key-change-in-production
ALCHEMORSEL_JWT_EXPIRATION=24h
ALCHEMORSEL_JWT_REFRESH_EXPIRATION=168h

# =============================================================================
# Session Configuration (Web Frontend)
# =============================================================================
ALCHEMORSEL_SESSION_SECRET=your-super-secret-session-key-change-in-production
ALCHEMORSEL_SESSION_SECURE=false
ALCHEMORSEL_SESSION_MAX_AGE=86400

# =============================================================================
# AI Service Configuration
# =============================================================================
ALCHEMORSEL_AI_PROVIDER=anthropic
ALCHEMORSEL_AI_ANTHROPIC_API_KEY=sk-ant-your-api-key-here
ALCHEMORSEL_AI_MAX_TOKENS=4096
ALCHEMORSEL_AI_TEMPERATURE=0.7
ALCHEMORSEL_AI_MAX_REQUESTS_PER_MINUTE=60
ALCHEMORSEL_AI_TIMEOUT=30s

# =============================================================================
# CORS Configuration
# =============================================================================
ALCHEMORSEL_CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3001
ALCHEMORSEL_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALCHEMORSEL_CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
ALCHEMORSEL_CORS_ALLOW_CREDENTIALS=true

# =============================================================================
# Logging Configuration
# =============================================================================
ALCHEMORSEL_LOG_LEVEL=debug
ALCHEMORSEL_LOG_FORMAT=json
ALCHEMORSEL_LOG_OUTPUT=stdout

# =============================================================================
# Monitoring Configuration
# =============================================================================
ALCHEMORSEL_MONITORING_ENABLED=true
ALCHEMORSEL_MONITORING_JAEGER_ENDPOINT=http://localhost:14268/api/traces
ALCHEMORSEL_MONITORING_PROMETHEUS_ENABLED=true
ALCHEMORSEL_MONITORING_PROMETHEUS_PORT=9091

# =============================================================================
# File Storage Configuration
# =============================================================================
ALCHEMORSEL_STORAGE_PROVIDER=local
ALCHEMORSEL_STORAGE_LOCAL_PATH=./uploads
ALCHEMORSEL_STORAGE_MAX_FILE_SIZE=10MB

# AWS S3 Configuration (if using S3)
ALCHEMORSEL_AWS_REGION=us-east-1
ALCHEMORSEL_AWS_ACCESS_KEY_ID=your-access-key
ALCHEMORSEL_AWS_SECRET_ACCESS_KEY=your-secret-key
ALCHEMORSEL_AWS_S3_BUCKET=alchemorsel-uploads
ALCHEMORSEL_AWS_ENDPOINT=  # Leave empty for AWS, set for MinIO

# MinIO Configuration (for local S3-compatible storage)
ALCHEMORSEL_MINIO_ENDPOINT=http://localhost:9000
ALCHEMORSEL_MINIO_ACCESS_KEY=minioadmin
ALCHEMORSEL_MINIO_SECRET_KEY=minioadmin
ALCHEMORSEL_MINIO_BUCKET=alchemorsel-dev

# =============================================================================
# API Client Configuration (for Web Frontend)
# =============================================================================
API_URL=http://localhost:3000
API_TIMEOUT=30s
API_RETRY_ATTEMPTS=3

# =============================================================================
# Security Configuration
# =============================================================================
ALCHEMORSEL_SECURITY_BCRYPT_COST=12
ALCHEMORSEL_SECURITY_RATE_LIMIT_ENABLED=true
ALCHEMORSEL_SECURITY_RATE_LIMIT_REQUESTS_PER_MINUTE=100
ALCHEMORSEL_SECURITY_CSRF_ENABLED=false

# =============================================================================
# Email Configuration (if needed)
# =============================================================================
ALCHEMORSEL_EMAIL_PROVIDER=smtp
ALCHEMORSEL_EMAIL_SMTP_HOST=smtp.gmail.com
ALCHEMORSEL_EMAIL_SMTP_PORT=587
ALCHEMORSEL_EMAIL_SMTP_USERNAME=your-email@gmail.com
ALCHEMORSEL_EMAIL_SMTP_PASSWORD=your-app-password
ALCHEMORSEL_EMAIL_FROM_ADDRESS=noreply@alchemorsel.com
ALCHEMORSEL_EMAIL_FROM_NAME=Alchemorsel

# =============================================================================
# Development Tools
# =============================================================================
ALCHEMORSEL_DEV_AUTO_MIGRATE=true
ALCHEMORSEL_DEV_SEED_DATA=true
ALCHEMORSEL_DEV_PROFILING_ENABLED=false

# =============================================================================
# Third-party API Keys
# =============================================================================
# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# OpenAI API (alternative AI provider)
OPENAI_API_KEY=sk-your-openai-key-here

# Google Gemini API (alternative AI provider)
GOOGLE_AI_API_KEY=your-google-ai-key-here